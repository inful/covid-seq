
FROM ubuntu:20.04

ENV DEBIAN_FRONTEND noninteractive 


RUN apt-get update && \
    apt-get install -y build-essential && \
    apt-get install -y wget unzip bzip2 ca-certificates curl libz-dev && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

RUN mkdir /tools && \
    cd /tools/ && \
    wget -O pTrimmer-master.zip https://github.com/DMU-lilab/pTrimmer/archive/master.zip && \
    unzip pTrimmer-master.zip && \
    cd pTrimmer-master && \
    make && \
    make clean
ENV PATH=/tools/pTrimmer-master/:$PATH

ENV TINI_VERSION v0.16.1
ADD https://github.com/krallin/tini/releases/download/${TINI_VERSION}/tini /usr/bin/tini
RUN chmod +x /usr/bin/tini

ENTRYPOINT [ "/usr/bin/tini", "--" ]
CMD [ "/bin/bash" ]